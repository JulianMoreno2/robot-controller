<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.untref.robotica.robotcontroller.view.widget.ShadowFrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/light_grey"
      >

    <LinearLayout android:id="@+id/headerbar_homes"
        style="@style/Theme.AppTheme.RobotController.HeaderBar">

      <include layout="@layout/toolbar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:gravity="center"
        android:orientation="vertical"
        >

      <ProgressBar
          android:id="@+id/pv_artists"
          style="@style/Theme.AppTheme.RobotController.ProgressBar"
          />

      <TextView
          android:id="@+id/txt_status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="17sp"
          android:textColor="#ff0000"
          android:text="@string/text_bluetooth_status"
          android:layout_above="@+id/btn_enable"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginBottom="10dp" />

      <Button
          android:id="@+id/btn_enable"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/text_enable_bluetooth"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

      <Button
          android:id="@+id/btn_scan"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/text_scan_bluetooth"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

    </LinearLayout>

  </com.untref.robotica.robotcontroller.view.widget.ShadowFrameLayout>

</LinearLayout>